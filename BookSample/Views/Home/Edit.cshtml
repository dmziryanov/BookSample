@model BookSample.Models.Book

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Book</legend>
        <div class="editor-field">
            @Html.LabelFor(x => x.Author)
         </div>
        <div class="editor-field">
            @Html.EditorFor(x => x.Author)
            @Html.ValidationMessageFor(m => m.Author)
        </div>
        <div class="editor-field">
            @Html.LabelFor(x => x.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(x => x.Title)
            @Html.ValidationMessageFor(m => m.Title)
        </div>
        <div class="editor-field">
            @Html.LabelFor(x => x.ISBN)
        </div>
        <div class="editor-field">
            @Html.EditorFor(x => x.ISBN)
            @Html.ValidationMessageFor(m => m.ISBN)
        </div>
        <div class="editor-field">
            @Html.LabelFor(x => x.Year)
        </div>
            <div class="editor-field">
                @Html.EditorFor(x => x.Year)
                @Html.ValidationMessageFor(m => m.Year)
            </div>

            <p>
                <input type="submit" value="Save" />
            </p>
</fieldset>
